
<%- include('header') %>

<div class="container">
    <div class="row">

        <div id="signupbox" style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title"> Edit Password Category</div>
                </div>  
                <div class="panel-body" >
                    <form action="/passwordCategory/edit/<%= val %>" id="EmployeeForm" class="form-horizontal" method="post"  role="form">
                      
                        <input type="hidden" name="id" value="<%= id %>">
                        <div class="form-group">
                            
                            <% if(error!= ''){ %>
                             
                                <p style="text-align: center;color:red;"><%= error%></p>
                        
                            
                            <% } %>

                            <label for="username" class="col-md-3 control-label">Category Name</label>
                            <div class="col-md-9">
                                <input type="text" class="form-control" name="passwordCategory" value="<%= val %>">
                            </div>
                        </div>
                       
                        <div class="form-group">
                            <!-- Button -->                                        
                            <div class="col-md-offset-3 col-md-9">
                            <input type="submit" name="submit" value="Update Category" class="btn btn-primary">   
                            </div>
                        </div>
                        
                        <p><a href="/passwordCategory">View All Category Lists</a></p>
                         
                        
                        
                        
                    </form>
                 </div>
            </div>
        </div> 
    </div>
</div>
</body>
</html>